{
    "class": "AS3",
    "action": "deploy",
    "persist": true,
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.0.0",
        "id": "urn:uuid:Juiceshop01",
        "label": "Sample 4",
        "remark": "owasp Juiceshop",
        "Sample_01": {
            "class": "Tenant",
            "A1": {
                "class": "Application",
                "template": "http",
                "serviceMain": {
                    "class": "Service_HTTP",
                    "virtualAddresses": [
                        "10.1.20.20"
                    ],
                    "pool": "juice_pool",
                    "policyWAF": {
                       "use": "JuiceShopASM"
                    },
                    "securityLogProfiles": [
                       
                       { "use": "secLogLocal"
                       }
                    ]
                },
                "juice_pool": {
                    "class": "Pool",
                    "monitors": [
                        "http"
                    ],
                    "members": [
                        {
                            "servicePort": 3000,
                            "serverAddresses": [
                                "10.1.10.100"
                                              ]
                        }          
                    ]
                },
                "JuiceShopASM": {
                   "class": "WAF_Policy",
                   "url": "https://raw.githubusercontent.com/RuncibleSpoon/F5AppSvcDemo/master/scenarios/AppSec/JuiceShop.xml",
                   "ignoreChanges": true
               },
               "secLogLocal": {
               "class": "Security_Log_Profile",
               "application": {
                   "storageFilter": {
                       "logicalOperation": "and",
                       "requestType": "all",
                       "responseCodes": [
                           "100",
                           "200",
                           "300",
                           "400"
                       ],
                       "protocols": [
                           "https",
                           "ws",
                           "http"
                       ],
                       "httpMethods": [
                           "ACL",
                           "GET",
                           "POLL",
                           "POST"
                       ]
                   },
                   "guaranteeLoggingEnabled": true,
                   "guaranteeResponseLoggingEnabled": true,
                   "maxHeaderSize": 200,
                   "maxQuerySize": 1040,
                   "maxRequestSize": 900,
                   "responseLogging": "all"
               }
           }
            }
        }
    }
}